<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top-Bar -->
    <LinearLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_opponent_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player 2 (Black)"
            android:textSize="16sp"
            android:gravity="start|center_vertical"/>

        <ImageView
            android:id="@+id/iv_menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Menu"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Obere Uhr -->
    <include
        android:id="@+id/clock_top"
        layout="@layout/view_player_clock"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spielfeld -->
    <GridLayout
        android:id="@+id/chess_board_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="8"
        android:rowCount="8"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/clock_top"
        app:layout_constraintBottom_toTopOf="@id/clock_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="8dp"/>

    <!-- Untere Uhr -->
    <include
        android:id="@+id/clock_bottom"
        layout="@layout/view_player_clock"
        app:layout_constraintTop_toBottomOf="@id/chess_board_grid"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom-Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_offer_draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draw"/>

        <Button
            android:id="@+id/btn_resign_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Resign"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
