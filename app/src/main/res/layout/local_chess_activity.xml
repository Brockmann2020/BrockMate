<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Basiselemente werden flach eingefÃ¼gt -->
    <include
        layout="@layout/chess_activity" />

    <!-- Obere Uhr -->
    <include
        android:id="@+id/clock_top"
        layout="@layout/view_player_clock"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Untere Uhr -->
    <include
        android:id="@+id/clock_bottom"
        layout="@layout/view_player_clock"
        app:layout_constraintBottom_toTopOf="@id/chess_board_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
